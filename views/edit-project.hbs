<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Project</title>
    <link rel="icon" href="../assets/img/pinterest-brands-solid.svg">
    <link rel="stylesheet" href="../assets/css/project.css">
    <link rel="stylesheet" href="../assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    {{> navbarNew currenPage = 'project' user = user}}
    <div class="content">
      <div class="form-content">
        <form action="/update-project/{{data.id}}?_method=PATCH&img={{data.image}}" method="POST" id="contactForm" class="bg-secondary-subtle p-4 rounded">
          <h1>EDIT MY PROJECT</h1>
          <div class="form-control">
            <label for="projectName" class="fw-bolder ms-2 me-1">Project Name</label>
            <input type="text" value="{{data.title}}" name="projectName" id="projectName" class="ms-3 p-2 text-center"/>
          </div>
          <div class="date">
            <div class="form-date">
              <label for="startDate" class="bg-white text-center mb-1 rounded">Start date</label>
              <input type="date" value="{{data.startDate}}" name="startDate" class="text-center p-1" id="startDate" />
            </div>
            <div class="form-date">
              <label for="endDate" class="bg-white text-center mb-1 rounded">End date</label>
              <input type="date" value="{{data.endDate}}" name="endDate" class="text-center p-1" id="endDate" />
            </div>
          </div>
          <label for="description" class="fw-bolder me-2 bg-white p-1 mb-1 rounded">Description</label>
          <div class="form-control">
            <textarea name="description" class="p-2" id="description" rows="6" cols="43">{{data.content}}</textarea>
          </div>

          <div class="form-project">
            <label for="Technologies" class="label-project">Technologies</label>
            <div class="checkbox">
              <div>
                <input {{#if node}} checked {{/if}} type="checkbox" name="nodeJs" id="nodeJs" value="NodeJS" />
                <label for="nodeJs">Node Js</label>
              </div>
              <div>
                <input {{#if next}} checked {{/if}} type="checkbox" name="nextJs" id="nextJs" value="NextJS" />
                <label for="nextJs">Next Js</label>
              </div>
              <div>
                <input {{#if react}} checked {{/if}} type="checkbox" name="reactJs" id="reactJs" value="ReactJS" />
                <label for="reactJs">React Js</label>
              </div>
              <div>
                <input {{#if ts}} checked {{/if}} type="checkbox" name="typeScript" id="typeScript" value="TypeScript" />
                <label for="typeScript">TypeScript</label>
              </div>
            </div>
          </div>
          <div class="form-control">
            <label for="fileUpload" class="fw-bolder mb-2">Upload Image</label>
            <div class="file-upload">
              <label for="fileUpload">
                <p class="mt-3 fs-6 p-1">choose</p>
                <i class="fa fa-paperclip" aria-hidden="true"></i>
              </label>
              <input type="file" name="fileUpload" id="fileUpload" hidden />
            </div>
          </div>
          <div class="btn-right">
            <button class="btn btn-secondary">Save Project</button>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>