  <section id="formProject">
    <div class="content">
      <div class="form-content">
        <form action="/project" method="post" id="contactForm">
          <h1>ADD MY PROJECT</h1>
          <div class="form-control">
            <label for="projectName">Project Name</label>
            <input type="text" name="projectName" id="projectName" />
          </div>
          <div class="date">
            <div class="form-date">
              <label for="startDate">Start date</label>
              <input type="date" name="startDate" id="startDate" />
            </div>
            <div class="form-date">
              <label for="endDate">End date</label>
              <input type="date" name="endDate" id="endDate" />
            </div>
          </div>
          <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="6"></textarea>
          </div>

          <div class="form-project">
            <label for="Technologies" class="label-project">Technologies</label>
            <div class="checkbox">
              <div>
                <input type="checkbox" name="nodeJs" id="nodeJs" value="Node JS" />
                <label for="nodeJs">Node Js</label>
              </div>

              <div>
                <input type="checkbox" name="nextJs" id="nextJs" value="Next JS" />
                <label for="nextJs">Next Js</label>
              </div>
              <div>
                <input type="checkbox" name="reactJs" id="reactJs" value="React JS" />
                <label for="reactJs">React Js</label>
              </div>
              <div>
                <input type="checkbox" name="typeScript" id="typeScript" value="TypeScript" />
                <label for="typeScript">TypeScript</label>
              </div>
            </div>
          </div>
          <div class="form-control">
            <label for="fileUpload">Upload Image</label>
            <div class="file-upload">
              <label for="fileUpload">
                <p>choose</p>
                <i class="fa fa-paperclip" aria-hidden="true"></i>
              </label>
              <input type="file" name="fileUpload" id="fileUpload" hidden />
            </div>
          </div>
          <div class="btn-right">
            <button class="btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <div class="project-content">
      <h1>MY PROJECT</h1>
      <div class="project-list" id="projectList">

        {{#each projects}}
        <div class="project-card" id="${id}" onclick="showDetail(${id})" >
            <img
              src="/assets/img/{{this.image}}"
              alt="{{this.image}}"
            />
            <p class="title">
              <strong>{{this.title}}</strong>
              <hr>
            </p>
            <p class="duration">
              Dikerjakan pada: {{this.startDate}} & Selesai pada: {{this.endDate}}
            </p>
            <p class="content-card">
              {{this.content}}
            </p>

            <div class="icon-card">
            {{this.technologies}}
            
            </div>
            <div class="btn-card">
              <button class="btn-primary">Edit</button>
              <form id="formDeletes" action="/project/{{this.id}}?_method=DELETE" method="POST" >
                <button type="submit" onclick="deleteMyProject()" class="btn-primary">Delete</button>
              </form>
            </div>
        </div>
        {{else}}
        <p>No Project posted</p>
        {{/each}}
      </div>
    </div>
  </section>
